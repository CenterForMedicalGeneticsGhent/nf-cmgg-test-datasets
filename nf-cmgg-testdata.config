// Base directory for test data
def test_data_dir = "https://raw.githubusercontent.com/CenterForMedicalGeneticsGhent/nf-cmgg-test-datasets/tree/main/data"

params {
    test_data {
        'homo_sapiens' {
            'genome' {
                genome_fasta_gz             = "${test_data_dir}/genomics/homo_sapiens/genome/seq/GCA_000001405.15_GRCh38_full_plus_hs38d1_analysis_set_chr21.fna.gz"
                genome_fasta_gz_gzi         = "${test_data_dir}/genomics/homo_sapiens/genome/seq/GCA_000001405.15_GRCh38_full_plus_hs38d1_analysis_set_chr21.fna.gz.gzi"
                genome_fasta_gz_fai         = "${test_data_dir}/genomics/homo_sapiens/genome/seq/GCA_000001405.15_GRCh38_full_plus_hs38d1_analysis_set_chr21.fna.gz.fai"
                genome_dict                 = "${test_data_dir}/genomics/homo_sapiens/genome/seq/GCA_000001405.15_GRCh38_full_plus_hs38d1_analysis_set_chr21.dict"
                genome_strtablefile         = "${test_data_dir}/genomics/homo_sapiens/genome/gatk4/GCA_000001405.15_GRCh38_full_plus_hs38d1_analysis_set_chr21.str.zip"
                genome_bowtie2_index        = "${test_data_dir}/genomics/homo_sapiens/genome/bowtie2"
                genome_bwa_index            = "${test_data_dir}/genomics/homo_sapiens/genome/bwa"
                genome_dragmap_index        = "${test_data_dir}/genomics/homo_sapiens/genome/genome_dragmap"
                genome_bwamem2_index        = "${test_data_dir}/genomics/homo_sapiens/genome/genome_bwamem2"
                genome_snapaligner_index    = "${test_data_dir}/genomics/homo_sapiens/genome/snapaligner"
            }
            'illumina' {
                genelists                 = "${test_data_dir}/genomics/homo_sapiens/illumina/bed/genelists"
            }
        }
    }
}
